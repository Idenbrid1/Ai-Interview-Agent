{
  "consumer": {
    "name": "NextJS-Frontend"
  },
  "provider": {
    "name": "Authentication-Service"
  },
  "interactions": [
    {
      "description": "User login request",
      "providerState": "user exists with valid credentials",
      "request": {
        "method": "POST",
        "path": "/api/auth/login",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "email": "user@example.com",
          "password": "validPassword123"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "success": true,
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
          "refreshToken": "refresh_token_string",
          "user": {
            "id": "user-123",
            "email": "user@example.com",
            "role": "user",
            "subscriptionStatus": "active"
          },
          "expiresIn": 3600
        }
      }
    },
    {
      "description": "Admin login request",
      "providerState": "admin exists with valid credentials and MFA enabled",
      "request": {
        "method": "POST",
        "path": "/api/auth/admin/login",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "loginId": "admin@company.com",
          "password": "adminPassword123",
          "mfaCode": "123456"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "success": true,
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
          "refreshToken": "admin_refresh_token",
          "user": {
            "id": "admin-456",
            "email": "admin@company.com",
            "role": "admin",
            "permissions": [
              "user_management",
              "interview_management",
              "payment_management"
            ]
          },
          "expiresIn": 3600
        }
      }
    },
    {
      "description": "User registration with OTP verification",
      "providerState": "email is available for registration",
      "request": {
        "method": "POST",
        "path": "/api/auth/register",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "name": "John Doe",
          "email": "john.doe@example.com",
          "phone": "+81-90-1234-5678",
          "password": "newPassword123",
          "careerType": "new_graduate",
          "birthDate": "1995-05-15",
          "salaryRange": "4-8_million",
          "desiredLocations": ["Tokyo", "Osaka"],
          "education": "university"
        }
      },
      "response": {
        "status": 201,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "success": true,
          "message": "Registration initiated. Please verify OTP sent to your email.",
          "userId": "user-789",
          "otpExpiresIn": 600
        }
      }
    },
    {
      "description": "OTP verification for registration",
      "providerState": "valid OTP exists for user registration",
      "request": {
        "method": "POST",
        "path": "/api/auth/verify-otp",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "userId": "user-789",
          "otpCode": "123456",
          "type": "registration"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "success": true,
          "message": "Registration completed successfully",
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
          "user": {
            "id": "user-789",
            "email": "john.doe@example.com",
            "role": "user",
            "subscriptionStatus": "trial"
          }
        }
      }
    },
    {
      "description": "Token refresh request",
      "providerState": "valid refresh token exists",
      "request": {
        "method": "POST",
        "path": "/api/auth/refresh",
        "headers": {
          "Content-Type": "application/json",
          "Authorization": "Bearer refresh_token_string"
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "success": true,
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
          "expiresIn": 3600
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}
